<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:background="@drawable/login_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/user_name_login"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/template_edit_text_border_grey"
                android:drawableLeft="@drawable/ic_person_grey_24dp"
                android:hint="Username"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorGrey"
                android:textSize="14sp"
                tools:layout_editor_absoluteY="0dp"/>

            <EditText
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/template_edit_text_border_grey"
                android:drawableLeft="@drawable/ic_vpn_key_grey_24dp"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:textColorHint="@color/colorGrey"
                android:inputType="textPassword"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp"/>

            <TextView
                android:id="@+id/mess_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/progress_bar_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorYellowBold"
                android:textColor="@color/colorWhite"
                android:text="Đăng Nhập"/>

            <Button
                android:id="@+id/btn_forget_pass"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorWhiteTranparent"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="10sp"
                android:text="Quên mật khẩu ?"/>

            <TextView
                android:layout_margin="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hoặc"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/colorBlueFace"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:text="Facebook"
                android:layout_width="wrap_content" />
            <Button
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/colorGreen"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:text="Đăng ký"
                android:layout_width="wrap_content" />


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>